{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Kam - Windows Camera Preview",
    "version": "../package.json"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "./icons/32x32.png"
    },
    "allowlist": {
      "all": false,
      "window": {
        "hide": true,
        "show": true,
        "setFocus": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "kam.dubis.dev",
      "publisher": "dubis.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/kiimesoft/kam/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "title": "Kam - Windows Camera Preview",
        "resizable": false,
        "visible": false,
        "width": 600,
        "height": 360,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "minimizable": false,
        "closable": false
      }
    ]
  }
}
